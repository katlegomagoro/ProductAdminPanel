
@using ProductAdminPanel.DAL.Models
@using MudBlazor

<MudForm @ref="_form">
    <MudPaper Elevation="2" Class="pa-4" Style="height: calc(100vh - 120px); overflow-y: auto;">
        <MudBreadcrumbs Items="_breadcrumbs" />
        <MudGrid>
            <MudItem xs="12" Class="d-flex justify-between align-center mb-4">
                <MudText Typo="Typo.h6" Style="color: #673ab7; font-weight: bold;">
                    Products
                </MudText>
                <MudButton StartIcon="@Icons.Material.Filled.Add" Color="Color.Success" OnClick="OpenAddDialog" Disabled="_isLoading">
                    Add New
                </MudButton>
            </MudItem>
        </MudGrid>

        <MudTextField Value="_searchTerm" ValueChanged="@( (string val) => OnSearchTermChanged(val) )" />
                      Placeholder="Search products..." Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" Immediate="true"
                      Margin="Margin.Dense" Class="mb-4" />

        @if (_isLoading)
        {
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
        }
        else
        {
            <MudPaper Elevation="1" Class="pa-4" Style="overflow-x: auto;">
                <MudDataGrid T="Product" Items="_filteredProducts" RowsPerPage="10"
                             Hover="true" Bordered="true" Striped="true"
                             FixedHeader="true" Height="500px" Dense="true">
                    <Columns>
                        <PropertyColumn Property="x => x.Name" Title="Name" />
                        <PropertyColumn Property="x => x.SKU" Title="SKU" />
                        <PropertyColumn Property="x => x.Supplier.Name" Title="Supplier" />
                        <PropertyColumn Property="x => x.Status" Title="Status" />
                        <PropertyColumn Property="x => x.StockQuantity" Title="Stock" />

                        <TemplateColumn Title="Actions">
                            <CellTemplate Context="ctx">
                                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" OnClick="@(() => OpenEditDialog(ctx.Item))" />
                                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(() => DeleteProduct(ctx.Item.Id))" />
                            </CellTemplate>
                        </TemplateColumn>
                    </Columns>
                    <PagerContent>
                        <MudDataGridPager T="Product" PageSizeOptions="@(new[] { 5, 10, 25, 50 })" />
                    </PagerContent>
                </MudDataGrid>
            </MudPaper>
        }
    </MudPaper>
</MudForm>
